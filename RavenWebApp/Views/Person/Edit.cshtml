@model RavenDbAccessLayer.Models.Person

<h2>Edit Person</h2>

@using (Html.BeginForm("Edit", "Person", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)

        <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
        @Html.LabelFor(m => m.Age)
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", type = "number" })
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-secondary" })
}
